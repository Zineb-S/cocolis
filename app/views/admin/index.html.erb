

<div class="flex justify-between flex-wrap mt-8 px-8">
  <div class="w-full my-auto">
    <h2 class="text-2xl text-teal-800 font-medium mb-4 text-center w-full">Daily Statistics</h2>
    <div class="flex  justify-center gap-4 w-full">

      <div class="p-2 w-full md:w-1/2 lg:w-1/4">
        <div class="h-full bg-gradient-to-r from-teal-500 to-teal-400 rounded overflow-hidden shadow-lg">
          <div class="p-6">
            <h2 class="text-xl mb-2 text-white">Revenue</h2>
            <p class="text-white text-lg">$<%= @quick_stats[:revenue] ? (@quick_stats[:revenue] / 100.0).to_s : "0" %></p>
          </div>
        </div>
      </div>
      <div class="p-2 w-full md:w-1/2 lg:w-1/4">
        <div class="h-full bg-gradient-to-r from-teal-500 to-teal-400 rounded overflow-hidden shadow-lg">
          <div class="p-6">
            <h2 class="text-xl mb-2 text-white">Total Deliveries</h2>
            <p class="text-white text-lg"> <%= @quick_stats[:sales] ? (@quick_stats[:sales]).to_s : "0" %></p>
          </div>
        </div>
      </div>
      <div class="p-2 w-full md:w-1/2 lg:w-1/4">
        <div class="h-full bg-gradient-to-r from-teal-500 to-teal-400 rounded overflow-hidden shadow-lg">
          <div class="p-6">
            <h2 class="text-xl mb-2 text-white">Average Price</h2>
            <p class="text-white text-lg"> $ <%= @quick_stats[:avg_sale] ? (@quick_stats[:avg_sale]).to_s : "0" %></p>
          </div>
        </div>
      </div>
      <div class="p-2 w-full md:w-1/2 lg:w-1/4">
        <div class="h-full bg-gradient-to-r from-teal-500 to-teal-400 rounded overflow-hidden shadow-lg">
          <div class="p-6">
            <h2 class="text-xl mb-2 text-white">Items/Delivery</h2>
            <p class="text-white text-lg">  <%= @quick_stats[:per_sale].to_i %></p>
          </div>
        </div>
      </div>

    </div>
  </div>
  <div class="w-full lg:w-1/2 px-4">
    <h2 class="text-2xl text-teal-800 font-medium mb-4">Revenue Chart</h2>
    <div class="bg-white p-6 rounded-lg shadow">
      <div class="w-full" data-controller="dashboard" data-dashboard-revenue-value="<%= @revenue_by_day.to_json %>">
        <canvas id="revenueChart"></canvas>
      </div>
    </div>
  </div>
  <div class="px-6 mt-8">
    <h2 class="text-2xl text-teal-800 mb-4 font-medium">Recent Unfulfilled Deliveries</h2>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white">

        <thead>
        <tr class="text-teal-800">
          <th class="px-6 py-4 border-b-2 border-gray-200 bg-gray-100">Delivery ID</th>
          <th class="px-6 py-4 border-b-2 border-gray-200 bg-gray-100">Client</th>
          <th class="px-6 py-4 border-b-2 border-gray-200 bg-gray-100">Date</th>
          <th class="px-6 py-4 border-b-2 border-gray-200 bg-gray-100">Amount</th>
        </tr>
        </thead>
        <tbody class="text-gray-700">
        <% @deliveries.each do |delivery| %>
          <tr>
            <td class="px-6 py-4 border-b border-gray-200">
              <%= link_to delivery.id, admin_delivery_path(delivery), class: "underline" %>

            </td>
            <td class="px-6 py-4 border-b border-gray-200">


            </td>
            <td class="px-6 py-4 border-b border-gray-200">

              <%= delivery.created_at.strftime("%B %d, %Y %H:%M") %>

            </td>

            <td class="px-6 py-4 border-b border-gray-200">

              <%= delivery.total.to_s %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>



