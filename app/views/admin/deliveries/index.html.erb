<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Deliveries</h1>
    <%= link_to "New delivery", new_admin_delivery_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <br>
  <div class="flex flex-col w-full">
    <h3 class="font-bold text-1xl">Not Delivered</h3>
    <div class="overlow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="py-2 inline-block min-w-full">
        <div class="overlow-x-auto">
          <table class="min-w-full overflow-x-scroll">
            <thead class="bg-white border-b">
            <tr>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                Delivery ID
              </th>

              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">Driver Email

              </th>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">Total

              </th>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">Address

              </th>
            </tr>
            </thead>
            <tbody>
            <% @not_fulfilled_deliveries.each do |d| %>
              <tr class="bg-gray-50 border-b">

                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 underline">
                  <%= link_to d.id, [:admin, d] %>
                </td>

                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 underline ">
                  <%= d.driver_email %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 ">
                  $<%= d.total %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 ">
                  $<%= d.address %>
                </td>

              </tr>
            <% end %>
            </tbody>


          </table>
          <%== pagy_nav(@not_fulfilled_pagy) if @not_fulfilled_pagy.pages > 1 %>
          <%== pagy_info(@not_fulfilled_pagy) if @not_fulfilled_pagy.pages > 1 %>
        </div>

      </div>

    </div>

  </div>
  <div class="flex flex-col w-full">
    <h1 class="font-bold text-1xl">Deliveries fulfilled</h1>
    <div class="overlow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="py-2 inline-block min-w-full">
        <div class="overlow-x-auto">
          <table class="min-w-full overflow-x-scroll">
            <thead class="bg-white border-b">
            <tr>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                Delivery ID
              </th>

              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">Driver Email

              </th>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">Total

              </th>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">Address

              </th>
            </tr>
            </thead>
            <tbody>
            <% @fulfilled_deliveries.each do |d| %>
              <tr class="bg-gray-50 border-b">

                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 underline">
                  <%= link_to d.id, [:admin, d] %>
                </td>

                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 underline ">
                  <%= d.driver_email %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 ">
                  $<%= d.total %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 ">
                  $<%= d.address %>
                </td>

              </tr>
            <% end %>
            </tbody>


          </table>
          <%== pagy_nav(@fulfilled_pagy) if @fulfilled_pagy.pages > 1 %>
          <%== pagy_info(@fulfilled_pagy) if @fulfilled_pagy.pages > 1 %>

        </div>

      </div>

    </div>

  </div>
</div>
