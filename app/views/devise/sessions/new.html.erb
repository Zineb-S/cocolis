          <!-- Icon for mobile menu -->
        </button>
      </div>

      <nav class="hidden md:flex space-x-10">
        <a href="#" class="text-base font-medium text-gray-500 hover:text-gray-900">Services</a>
        <a href="#" class="text-base font-medium text-gray-500 hover:text-gray-900">About</a>
        <a href="#" class="text-base font-medium text-gray-500 hover:text-gray-900">Contact Us</a>
      </nav>

      <div class="hidden md:flex items-center justify-end md:flex-1 lg:w-0">
        <a href="/users/sign_up" class="whitespace-nowrap text-base font-medium text-gray-500 hover:text-gray-900">Sign Up</a>
        <a href="/admins/sign_in" class="ml-6 whitespace-nowrap inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-blue-600 hover:bg-blue-700">Log In - Admin</a>
        <a href="/users/sign_in" class="ml-6 whitespace-nowrap inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-green-600 hover:bg-green-700">Log In - User</a>
